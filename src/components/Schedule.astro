---
interface Props {
    schedule: {
        time: string;
        action: string;
    }[];
}

const { schedule } = Astro.props;
---

<dl class="my-4 grid grid-cols-[max-content_max-content] justify-start gap-x-4 gap-y-1">
    {
        schedule.map((s) => (
            <>
                <dt>{s.time}</dt>
                <dd>{s.action}</dd>
            </>
        ))
    }
</dl>
