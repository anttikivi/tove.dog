---
interface Props {
    schedule: {
        time: string;
        action: string;
        html?: boolean;
    }[];
}

const { schedule } = Astro.props;
---

<dl class="my-4 grid grid-cols-[max-content_max-content] justify-start gap-x-4 gap-y-1">
    {
        schedule.map((s) => (
            <>
                <dt set:text={s.time} />
                {s.html ? <dd set:html={s.action} /> : <dd set:text={s.action} />}
            </>
        ))
    }
</dl>
